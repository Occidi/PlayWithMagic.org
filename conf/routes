# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     controllers.Application.index()

# Routines page
GET         /newroutine           controllers.Application.newRoutine(id: Long?= 0)
POST        /newroutine           controllers.Application.postRoutine()
GET         /deleteRoutine        controllers.Application.deleteRoutine(id: Long?= 0)

# New Magicians page
GET         /newmagician          controllers.Application.newMagician(id: Long?=0)
POST        /newmagician          controllers.Application.postMagician()
GET         /deleteMagician       controllers.Application.deleteMagician(id: Long?= 0)

# Magician List
GET         /showmagicians        controllers.Application.showMagicians()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)